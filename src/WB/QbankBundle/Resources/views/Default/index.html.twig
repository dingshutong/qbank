{% extends 'WBQbankBundle::base-front.html.twig' %}

{% block body %}

    <div class="container">

        {{ render(controller('WBQbankBundle:Default:frontHeaderMenu', { activeButton: active_button})) }}
        
        <div class="row">
            <div class="col-md-12">
                <div class="row">
            
                    <div class="col-md-12">
                        <h2>{{ 'text.title_main'|trans }}</h2>
                        <p>{{ 'text.text_main'|trans }}</p>
                    </div>

                    <div class="col-md-3">
                        <p><img src="{{ asset('bundles/wbqbank/images/indicators.png') }}" alt="indicators" /></p>
                        <h3><a href="{{ path('indicators') }}">{{ 'strings.indicators'|trans }}</a></h3>
                        <p>{{ 'text.text_ind'|trans }}</p>
                    </div>

                    <div class="col-md-3">
                        <p><img src="{{ asset('bundles/wbqbank/images/concepts.png') }}" alt="concepts" /></p>
                        <h3><a href="#">{{ 'strings.concepts'|trans }}</a></h3>
                        <p>{{ 'text.text_conc'|trans }}</p>
                    </div>

                    <div class="col-md-3">
                        <p><img src="{{ asset('bundles/wbqbank/images/classifications.png') }}" alt="classifications" /></p>
                        <h3><a href="#">{{ 'strings.classifications'|trans }}</a></h3>
                        <p>{{ 'text.text_clas'|trans }}</p>
                    </div>

                    <div class="col-md-3">
                        <p><img src="{{ asset('bundles/wbqbank/images/questionnaries.png') }}" alt="questionnaires" /></p>
                        <h3><a href="#">{{ 'strings.questionnaires'|trans }}</a></h3>
                        <p>{{ 'text.text_ques'|trans }}</p>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
