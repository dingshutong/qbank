               {% if resource.url %}
                    <a href="{{ resource.url }}" title="{{ 'Download'|trans }}" target="_blank">
                         <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
                    </a>     
               {% endif %}
            </td>
     -->       
</tr>
{% endfor %}
</table>

</div>