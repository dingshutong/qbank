{% if questGroups|length %}
    <select>

        {% if pid == 0 %}
            <option value="">- {{ 'strings.select_category'|trans }} -</option>
        {% else %}
            <option value="">- {{ 'strings.select_sub_category'|trans }} -</option>
        {% endif %}

        {% for questGroup in questGroups %}
            <option value="{{ questGroup.id }}">{{ questGroup.name }}</option>
        {% endfor %}

    </select>
{% endif %}
